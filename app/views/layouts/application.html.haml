!!! 5
%html
  %head
    %meta(charset="UTF-8")
    %meta(http-equiv="content-language" content="en")
    %title= @page_title || "The Beginnings & Endings Project"
    %meta{name: "description", content: "#{@page_meta_description || 'Brightly made an album, called Beginnings & Endings. They wanted people to share it - to send it to their friends and family and high school crushes and former worst enemies. When you join in, you get our new single Preflight Nerves and a unique code. If ten people sign up with your code, you get our album. Easy as that.'}"}
    %meta{:content => "Beginnings & Endings", :name => "description"}/
    %meta{:content => "http://charliegleason.com/", :name => "author"}/
    %meta{:content => "text/html;charset=utf-8", "http-equiv" => "Content-Type"}/
    = favicon_link_tag '/apple-touch-icon.png', :rel => 'apple-touch-icon', :type => 'image/png'

    %meta{:content => "#{@facebook_meta_title || 'The Beginnings & Endings Project'}", :property => "og:title"}
    %meta{:content => "#{@facebook_meta_description || 'Brightly made an album, called Beginnings & Endings. They wanted people to share it - to send it to their friends and family and high school crushes and former worst enemies. When you join in, you get our new single Preflight Nerves and a unique code. If ten people sign up with your code, you get our album. Easy as that.'}", :property => "og:description"}
    %meta{:content => "http://beginnings.wearebrightly.com/apple-touch-icon.png", :property => "og:image"}
    %meta{:content => "The Beginnings & Endings Project", :property => "og:site_name"}
    %meta{:content => "website", :property => "og:type"}
    %meta{:content => "http://#{request.host+request.fullpath}", :property => "og:url"}
    %meta{:content => "255477521158048", :property => "fb:app_id"}

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body{class: "#{controller.controller_name} #{controller.action_name}"}

    #fb-root

    = render partial: "core/header"
    = render partial: "core/flash", :locals => {:flash => flash}

    = yield

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-25297036-5']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
